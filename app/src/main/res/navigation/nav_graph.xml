<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/citiesFragment">
    <fragment
        android:id="@+id/citiesFragment"
        android:name="com.manuh.share.witinterviewapplication.views.CitiesFragment"
        android:label="fragment_alarm"
        tools:layout="@layout/fragment_cities">
        <action
            android:id="@+id/action_citiesFragment_to_weatherDetailsFragment"
            app:destination="@id/weatherDetailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/weatherDetailsFragment"
        android:name="com.manuh.share.witinterviewapplication.views.WeatherDetailsFragment"
        android:label="fragment_add_alarm"
        tools:layout="@layout/fragment_weather_details">

        <argument
            android:name="id" />

        <action
            android:id="@+id/action_weatherDetailsFragment_to_citiesFragment"
            app:destination="@id/citiesFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
</navigation>
